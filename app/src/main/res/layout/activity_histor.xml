<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/histo"
    android:orientation="vertical"
    tools:context=".Histor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60ssp"
        android:background="#EFC800"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Histor"
            android:textColor="@color/black"
            android:textSize="@dimen/_35ssp"
            android:layout_gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#B300815C"
        android:weightSum="2"

    >

    <Button
        android:id="@+id/bf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:text="Brazilian football"
        android:background="#EFC800"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_250sdp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"


    />

    <Button
        android:id="@+id/bs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:text="Brazilian stadium"
        android:background="#EFC800"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"

    />


</LinearLayout>

    </LinearLayout>
